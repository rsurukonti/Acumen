
// Floating Box

model Main(simulator) = 
initially
  t   =  0,
  t'  =  1,
 _3D  =  ()
always
  t' = 1,
  _3D = 
  (Box 
     center=(0,0,0)       // Center point
     size=(3,5,0.5) // Size        
     color=(0.3,0.5,0.6) 
     rotation=(exp(-1*(3-t)^2),
               -exp(-1*(18-3*t)^2),
               exp(-1*(40-5*t)^2))) 

