
// Displaying a box

model Main(simulator) = 
initially
  _3D = (Box                 // Type of _3D object
           center=(0,0,0)    // Center point
           size=(0.2,1,3)    // Size in [x,y,z] form
           color=red         // Color
           rotation=(0,0,0)) // Orientation


