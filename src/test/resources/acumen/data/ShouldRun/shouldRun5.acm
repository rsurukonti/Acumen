model A() = initially

model Main(simulator) = 
  initially
    x  =  create A(),
    mode  =  "Init",
    y  =  0
  always
  simulator.timeStep + = 1,
  simulator.endTime + = 1,
  match mode with[
    "Init" ->
      if x.className == typeOf(A) then
        y + = 1
      else
        y + = 2
      ,
      mode + = "Idle"
    |"Idle" ->
   ]
 
